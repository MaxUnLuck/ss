<Window x:Class="Sessia.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Теплица - Система полива" Height="500" Width="700" Background="#FF585858">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="484.04"/>
        </Grid.RowDefinitions>

        <!-- Верхняя панель с датой, временем и ускорением -->
        <Grid Grid.Row="0" Margin="10,10,10,294">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <TextBlock x:Name="DateText" Grid.Row="0" 
                       Foreground="White" FontSize="16" 
                       HorizontalAlignment="Center" Margin="0,5"/>

            <TextBlock x:Name="TimeHHMM" Grid.Row="1" 
                       HorizontalAlignment="Center" 
                       Text="00:00" FontSize="72" Foreground="White" Margin="0,10"
                       FontFamily="Consolas"/>

            <!-- Панель выбора ускорения -->
            <Grid Grid.Row="2" HorizontalAlignment="Center" Margin="0,10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0" Text="Ускорение: " 
                           Foreground="White" VerticalAlignment="Center" 
                           Margin="0,0,10,0"/>
                <Button Grid.Column="1" x:Name="Speed1x" Content="1x" Width="40" 
                        Margin="2" Click="SpeedButton_Click"/>
                <Button Grid.Column="2" x:Name="Speed10x" Content="10x" Width="40" 
                        Margin="2" Background="#FF2E8B57" Click="SpeedButton_Click"/>
                <Button Grid.Column="3" x:Name="Speed60x" Content="60x" Width="40" 
                        Margin="2" Click="SpeedButton_Click"/>
                <Button Grid.Column="4" x:Name="Speed600x" Content="600x" Width="40" 
                        Margin="2" Click="SpeedButton_Click"/>
            </Grid>
        </Grid>

        <!-- Нижняя панель со статусами -->
        <Grid Margin="10,200,10,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Левая колонка: Статус системы -->
            <Grid Grid.Column="0" Margin="10">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <TextBlock Grid.Row="0" Foreground="White" FontSize="14" 
                           Text="СТАТУС СИСТЕМЫ" Margin="0,0,0,10"/>
                <Label Grid.Row="1" x:Name="SoilHumidity" Content="" 
                       Foreground="White" FontSize="12"/>
                <Label Grid.Row="2" x:Name="PumpStatus" Content="" 
                       Foreground="White" FontSize="12"/>
                <Label Grid.Row="3" x:Name="ValveStatus" Content="" 
                       Foreground="White" FontSize="12"/>
                <Label Grid.Row="4" x:Name="FertilizerStatus" Content="" 
                       Foreground="White" FontSize="12"/>
                <Label Grid.Row="5" x:Name="NextWatering" Content="" 
                       Foreground="White" FontSize="12"/>
                <Label Grid.Row="6" x:Name="CurrentAction" Content="" 
                       Foreground="Yellow" FontSize="12"/>
            </Grid>

            <!-- Правая колонка: Учёт расхода -->
            <Grid Grid.Column="1" Margin="10">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <TextBlock Grid.Row="0" Foreground="White" FontSize="14" 
                           Text="УЧЁТ РАСХОДА" Margin="0,0,0,10"/>
                <Label Grid.Row="1" x:Name="WaterUsed" Content="" 
                       Foreground="White" FontSize="12"/>
                <Label Grid.Row="2" x:Name="FertilizerUsed" Content="" 
                       Foreground="White" FontSize="12"/>
                <Label Grid.Row="3" x:Name="LastRecord" Content="" 
                       Foreground="LightGray" FontSize="10"/>

                <Button Grid.Row="4" x:Name="ResetData" Content="Сбросить учёт" 
                        Margin="0,20,0,0" Padding="10,5" 
                        Background="#FF2E8B57" Foreground="White"
                        VerticalAlignment="Top"
                        Click="ResetData_Click"/>
            </Grid>
        </Grid>
    </Grid>
</Window>